<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab02_2"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/light_gray"
        android:paddingStart="20dp"
        android:paddingEnd="@dimen/margin_base"
        android:paddingTop="@dimen/margin_basex2"
        android:paddingBottom="@dimen/margin_basex2"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nhap_ten"
        android:layout_marginTop="20px"
        android:textSize="60px"
        android:background="@color/color2"
        app:layout_constraintTop_toBottomOf="@id/label"
        app:layout_constraintStart_toStartOf="parent"
        />


    <EditText
        android:id="@+id/etName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100px"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        app:layout_constraintStart_toEndOf="@+id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btnNhap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/nhap"
        app:layout_constraintTop_toBottomOf="@+id/etName"
        app:layout_constraintStart_toStartOf="@+id/etName"
        app:layout_constraintEnd_toEndOf="@+id/etName"
        />

    <TextView
        android:id="@+id/tvSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        app:layout_constraintTop_toBottomOf="@+id/btnNhap"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/color1"
        ></TextView>

    <ListView
        android:id="@+id/lvPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSelection"
        />

</androidx.constraintlayout.widget.ConstraintLayout>